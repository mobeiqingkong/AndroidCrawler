<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tools_TextSplitActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp"
            >
            <EditText
                android:id="@+id/Tools_TextSplitPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="txt文件路径"
                />
            <LinearLayout
                android:id="@+id/Tools_TextSplitRuleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正则表达式拆分规则:"
                    android:layout_gravity="start"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/Tools_TextSplitRule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="正则表达式拆分规则"
                    />
            </LinearLayout>
            <CheckBox
            android:id="@+id/AutoSplit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:checked="true"
            android:text="智能拆分"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/TextSplitStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:text="确认拆分"/>

                <Button
                    android:id="@+id/TextSplitExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:layout_marginStart="5dp"
                    android:text="取消"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>