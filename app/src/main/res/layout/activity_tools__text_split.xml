<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tools_TextSplitActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp"
            >
            <EditText
                android:id="@+id/Tools_TextSplitPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/wenjianjlj"
                android:autofillHints="@string/wenjianjlj"
                android:inputType="text"
                tools:targetApi="o" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cfgz"
                    android:layout_gravity="start"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/Tools_TextSplitRule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cfgz"
                    android:autofillHints="@string/cfgz"
                    tools:targetApi="o"
                    android:inputType="text" />
            </LinearLayout>
            <CheckBox
            android:id="@+id/AutoSplit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:checked="true"
            android:text="@string/zncf"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/TextSplitStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:text="@string/querencaifen"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:layout_marginStart="5dp"
                    android:text="@string/quxiao"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>