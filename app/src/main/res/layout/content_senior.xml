<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/SeniorCrawMain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#FFFFFF"
    tools:context=".SeniorCrawlActivity">

    <Button
        android:id="@+id/SeniorSetWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置网页规则"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/shape"
        android:layout_gravity="center"
        android:layout_above="@id/SeniorSetCrawRule"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/SeniorSetCrawRule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置爬取规则"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/shape"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/SeniorSetSaveRule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置保存规则"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/shape"
        android:layout_below="@id/SeniorSetCrawRule"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/SeniorCrawBeginCraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_gravity="center"
        android:text="开始爬取"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@id/SeniorSetSaveRule"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
</RelativeLayout>