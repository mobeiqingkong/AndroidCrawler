<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tools_QuantityRenameActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15sp"
        >
        <EditText
            android:id="@+id/Tools_QuantityRenamePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="文件夹路径"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正则表达式替换规则:"
            android:layout_gravity="start"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="替换前:"
            android:layout_gravity="start"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/Tools_QuantityRenameSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="选择部分"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="替换后:"
            android:layout_gravity="start"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/Tools_QuantityRenameReplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="替换部分"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/RenameStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="确认替换"/>
            <Button
                android:id="@+id/RenameCancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginStart="5dp"
                android:text="还原"/>
            <Button
                android:id="@+id/RenameExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginStart="5dp"
                android:text="取消"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>