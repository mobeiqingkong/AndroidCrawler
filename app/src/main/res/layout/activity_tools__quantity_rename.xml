<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tools_QuantityRenameActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15sp"
        >
        <EditText
            android:id="@+id/Tools_QuantityRenamePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/wenjianjlj"
            android:autofillHints="@string/wenjianjlj"
            tools:targetApi="o"
            android:inputType="text" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tihuanguize"
            android:layout_gravity="start"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tihuanqian"
            android:layout_gravity="start"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/Tools_QuantityRenameSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/xuanzebufen"
            android:autofillHints="@string/xuanzebufen"
            tools:targetApi="o"
            android:inputType="text" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tihuanhou"
            android:layout_gravity="start"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/Tools_QuantityRenameReplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tihuanbufen"
            android:autofillHints="@string/tihuanbufen"
            tools:targetApi="o"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/RenameStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="@string/querentihuan"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/RenameCancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginStart="5dp"
                android:text="@string/huanyuan"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/RenameExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginStart="5dp"
                android:text="@string/quxiao"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>