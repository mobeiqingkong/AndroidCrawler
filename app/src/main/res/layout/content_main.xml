<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/MainLinearlayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="start"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="爬取采用的标识头部:"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/Head"
            android:layout_width="match_parent"
            android:hint="爬取采用的标识头部"
            android:text=""
            android:inputType="text"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="爬取的网站第一页:"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/WebFirst"
            android:layout_width="match_parent"
            android:hint="爬取的网站第一页"
            android:text=""
            android:inputType="text"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="爬取的网站页码前标识:"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/WebBegin"
            android:layout_width="match_parent"
            android:hint="爬取的网站页码前标识"
            android:text=""
            android:inputType="text"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:text="第"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/BeginPage"
                android:layout_width="60dp"
                android:text=""
                android:inputType="number"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/shape"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:text="页到第"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/FinalPage"
                android:layout_width="60dp"
                android:text=""
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:singleLine="true"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="页"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="爬取的网站页码后标识:"
            android:layout_marginTop="5dp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/WebEnd"
            android:layout_width="match_parent"
            android:hint="爬取的网站的页码后标识"
            android:text=""
            android:inputType="text"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <RadioGroup
            android:id="@+id/CrawlRule1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
            android:id="@+id/IfAutoCrawl"
            android:text="智能爬取"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/IfEasyRule"
                android:text="简单爬取"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/IfAllRule"
                android:text="选择器爬取"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>
        <LinearLayout
            android:id="@+id/Flag1Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:paddingStart="3dp"
                    android:paddingTop="6dp"
                    android:text="外链标识"
                    android:textColor="#000000"/>
                <RadioGroup
                    android:id="@+id/EasyRuleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/EasyRuleid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="id"/>
                    <RadioButton
                        android:id="@+id/EasyRuleclass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="class"
                        android:checked="true"/>
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/Flag1"
                android:layout_width="match_parent"
                android:hint="外链标识:"
                android:inputType="text"
                android:text=""
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="爬取的随眠时间1(默认:0ms):"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/Sleep1"
                android:layout_width="match_parent"
                android:hint="爬取的随眠时间1"
                android:inputType="number"
                android:text="0"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="正则表达式爬取规则:"
            android:layout_marginTop="5dp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/RegCrawl"
            android:layout_width="match_parent"
            android:hint="正则表达式爬取规则"
            android:text=""
            android:inputType="text"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="正则表达式剔除规则(为空则不剔除):"
            android:layout_marginTop="5dp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/NotRegCrawl"
            android:layout_width="match_parent"
            android:hint="正则表达式剔除规则"
            android:text=""
            android:inputType="text"
            android:layout_height="wrap_content"
            android:singleLine="true"/>



        <RadioGroup
            android:id="@+id/CrawlRule2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/IfAutoCrawl2"
                android:text="智能爬取"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/IfEasyRule2"
                android:text="简单爬取"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/IfAllRule2"
                android:text="选择器爬取"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>
        <LinearLayout
            android:id="@+id/Flag2Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:text="内容标识:"
                    android:textColor="#000000"/>
                <RadioGroup
                    android:id="@+id/EasyRuleGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/EasyRuleid2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="id"/>
                    <RadioButton
                        android:id="@+id/EasyRuleclass2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="class"
                        android:checked="true"/>
                </RadioGroup>
            </LinearLayout>
            <EditText
                android:id="@+id/Flag2"
                android:layout_width="match_parent"
                android:hint="内容标识"
                android:inputType="text"
                android:text=""
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="爬取的睡眠时间2(默认:0ms):"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/Sleep2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="爬取的睡眠时间2"
                android:inputType="number"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="保存完整路径+文件名:"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/SaveName"
            android:layout_width="match_parent"
            android:hint="保存完整路径+文件名"
            android:text=""
            android:inputType="text"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <RadioGroup
            android:id="@+id/SaveRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/SaveMethodAddTo"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="追加"/>
            <RadioButton
                android:id="@+id/SaveMethodCover"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="覆盖"/>
            <RadioButton
                android:id="@+id/SaveMethodNewFile"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新文件"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/NewFileAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="新文件为原文件追加自定义文本，默认追加.txt"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/SaveNameAdd"
                android:layout_width="match_parent"
                android:text=".txt"
                android:hint="新文件追加后缀,默认为.txt"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:textColor="#000000">
            <Button
                android:id="@+id/BeginCrawl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shape"
                android:text="开始爬取" />

            <Button
                android:id="@+id/FixData"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/shape"
                android:text="修复数据" />
            <Button
                android:id="@+id/ClearMain"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="1dp"
                android:width="0dp"
                android:background="@drawable/shape"
                android:text="清空设置" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>