<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#FFFFFF"
    tools:context=".ToolsActivity">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="15dp"
    android:padding="5dp"
    >
    <TableRow
        android:gravity="center"
        android:padding="5dp">
        <Button
            android:id="@+id/Tools_QuantityRename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/content_tools_piliangcmm"
            android:layout_marginEnd="5dp"
            android:textColor="#000000"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/Tools_QuantityReencode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/content_tools_piliangzhbm"
            android:textColor="#000000"
            tools:ignore="ButtonStyle" />


    </TableRow>

    <TableRow
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/Tools_QuantityNormalize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/content_tools_piliangggh"

            android:layout_marginEnd="5dp"
            android:textColor="#000000"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/Tools_TextSplit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/content_tools_wenbenchaifen"
            android:textColor="#000000"
            tools:ignore="ButtonStyle" />

    </TableRow>

    <TableRow
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/Tools_TextMerge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/content_tools_wenbenzhenghe"

            android:layout_marginEnd="5dp"
            android:textColor="#000000"
            tools:ignore="ButtonStyle" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:textColor="#000000"
            tools:ignore="ButtonStyle" />

    </TableRow>


</TableLayout>


</LinearLayout>