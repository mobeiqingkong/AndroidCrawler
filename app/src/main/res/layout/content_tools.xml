<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/toolsMain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#FFFFFF"
    tools:context=".ToolsActivity">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="15dp"
    android:padding="5dp"
    >
    <TableRow
        android:gravity="center"
        android:padding="5dp">
        <Button
            android:id="@+id/Tools_QuantityRename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="批量重命名"

            android:layout_marginEnd="5dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Tools_QuantityReencode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="批量转换编码"
            android:textColor="#000000" />


    </TableRow>

    <TableRow
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/Tools_QuantityNormalize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="批量规格化"

            android:layout_marginEnd="5dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Tools_TextSplit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="文本拆分"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/Tools_TextMerge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="文本整合"

            android:layout_marginEnd="5dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Tools_RemoveRepeat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="内容去重"
            android:textColor="#000000" />

    </TableRow>


</TableLayout>


</LinearLayout>